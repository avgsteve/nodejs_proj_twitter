mixin createPostForm(userLoggedIn)
    .postFormContainer
        .profileImageContainer
            img(src=userLoggedIn.profilePic, alt="User's profile picture")
        .textareaContainer
            textarea#postTextarea(placeholder="What's happening?")
            .postImagePreviewContainer
                .imageWrapperForNewPost
                    span.closePreviewImageBtn(title='click to remove image')
                        i.far.fa-times-circle
                    a(href="#" data-toggle="modal" data-target="#addImageToPostModal")
                        img.postPhotoPreview
                input.newPostImgData.imageUrl(type='hidden' value='')
                input.newPostImgData.imageTitle(type='hidden' value='')
            .buttonsContainer
                button#submitPostButton(disabled="") Post
                button#addPhotoToPostButton(title="Click to add photo" data-toggle="modal" data-target="#addImageToPostModal")
                    i.bi.bi-card-image
